@model WorldTrackerDomain.Views.SummaryView

@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">World Tracker</h1>
    <p>Let's use Event Sourcing to track people, places, and the places people visit!</p>
</div>
<div class="row">
    <div class="col-lg-4">
        <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>People</title><rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="white" dy=".5em" font-size="40px">@Model.People</text></svg>

        <h2>People</h2>
        <p>A world has people.  Let's track that.</p>
        <p><a class="btn btn-secondary" href="@Url.Action("Create", "People")">Add Person</a></p>
    </div>
    <div class="col-lg-4">
        <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Places</title><rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="white" dy=".5em" font-size="40px">@Model.Places</text></svg>
        <h2>Places</h2>
        <p>A world has places. Let's track that.</p>
        <p><a class="btn btn-secondary"  href="@Url.Action("Create", "Places")">Add Place</a></p>
    </div>
    <div class="col-lg-4">
        <svg class="bd-placeholder-img rounded-circle" width="140" height="140" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Visits</title><rect width="100%" height="100%" fill="#777" /><text x="50%" y="50%" fill="white" dy=".5em" font-size="40px">@Model.Visits</text></svg>
        <h2>Visits</h2>
        <p>People visit places.  Let's track that.</p>
        <p><a class="btn btn-secondary"  href="@Url.Action("Create", "Visits")">Add Visit</a></p>
    </div>
</div>